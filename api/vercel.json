{
  "version": 2,
  "github": {
    "enabled": true,
    "autoJobCancelation": true,  // Cancels ongoing redundant deployments
    "silent": true               // Suppresses extra deployment notifications
  },
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/$1"
    }
  ]
}
